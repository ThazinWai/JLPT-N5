                android:textColor="@color/colorAccent"
                android:layout_marginTop="5dp"/>

            <Button
                style="@style/CategoryStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="問題2"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="5dp"/>

